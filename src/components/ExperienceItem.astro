---
interface Props {
  title: string;
  description: string;
  date: string;
  isCurrent?: boolean;
}

const { title, description, date, isCurrent } = Astro.props;
---

{
  isCurrent ? (
    <>
      <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-[#99BCD0]" />
      <div class="animate-ping absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-[#99BCD0]" />
    </>
  ) : (
    <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-gray-700" />
  )
}
<time class="mb-1 text-sm font-normal leading-none text-sky-200/80">{date}</time
>
<h3 class="text-lg font-semibold text-yellow-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-200 text-balance">
  {description}
</p>
